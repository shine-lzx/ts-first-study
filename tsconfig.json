{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es6",
      "dom",
      "scripthost",
      "es2015.symbol"
    ],
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "*": [
        "types/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "jquery",
      "node"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
  },
  "include": [
    "@types",
    "./global.d.ts"
  ]
}